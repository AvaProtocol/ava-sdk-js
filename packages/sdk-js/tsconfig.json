{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["google-protobuf"],
    "baseUrl": ".",
    "paths": {
      "@/grpc_codegen/*": ["../../grpc_codegen/*"],
      "@avaprotocol/types": ["../types/src/index.ts"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist"
  },
  "references": [{ "path": "../types" }],
  "include": ["src/**/*"]
}
