{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "rootDir": "./",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/grpc_codegen/*": ["grpc_codegen/*"],
      "@/sdk-js/*": ["packages/sdk-js/*"],
      "@/types/*": ["packages/types/*"]
    }
  },
  "include": ["src/**/*", "grpc_codegen/**/*", "tests"],
  "ts-node": {
    "esm": true
  }
}
